print("QUESTION 4:\n")
sentence=input("TYPE ANY SENTENCE:\n")
search_character="name"

if(search_character in sentence):
    print("YES")
#in keyword is used to check if a value is present in a sequence
else:
   print("NO")
   
   
 print("QUESTION 5:\n")
a = int(input("Enter triangle side 1:"))
b = int(input("Enter triangle side 2:"))
c = int(input("Enter triangle side 3:"))
e = a + b > c and a + c > b and c + b > a

match e:
    case True:
        print('Yes')
    case False:
        print('No')


print("QUESTION 6:\n")
a = int(input("Enter first number:"))
b = int(input("Enter second number:"))
c = bin(a^b)     #convert new number to binary
d = c.count('1') #count the bits needed to be changed
print(d)

