
print("QUESTION 1:\n") 
x= "Python is a case sensitive language"
print(len(x))
k=x[::-1]#reverse the string 
print(k)
print(x[9:27])
y=x.replace('a case sensitive','object oriented')# or we can us mystr.replace("","") 
print(y)
u=x.index("a")# find the index of a
print(u) 
t = x.replace(' ','')
print(t)


print("QUESTION 2:\n")
n ="Lalit kumar"
x = "21107010"
dep= "Mechanical Engineering"
e='''Hey, ABC Here!
My SID is 2110XXXX
I am from XYZ department and my CGPA is 9.9'''
e=e.replace('ABC',n)
e=e.replace('2110XXXX',x)
e=e.replace('XYZ',dep)
print(e)


